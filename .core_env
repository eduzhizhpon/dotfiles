#!/bin/bash


# Load environment variables from systemd config
if [[ -f "$HOME/.config/environment.d/0-env.conf" ]]; then
    set -a
    source "$HOME/.config/environment.d/0-env.conf"
    set +a
fi

# Zsh specific: Ensure PATH contains unique entries to prevent duplicates
typeset -U path

[[ -f $HOME/.device/.env ]] && source $HOME/.device/.env

[[ -f $HOME/.local_env ]] && source $HOME/.local_env
