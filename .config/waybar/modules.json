{
  "layer": "top",
  "position": "top",
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": false,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    }
  },
  "hyprland/language": {
    "format": "󰌌 {short}",
    "disable-scroll": true,
    "on-click": "custom-next-kb-lang"
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [
      "Alacritty",
      "kitty"
    ],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },
  "hyprland/window": {
    "max-length": 40,
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1",
      "(.*) Visual Studio Code": "$1 VS Code"
    },
    "separate-outputs": true
  },
  "custom/empty": {
    "format": ""
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "custom/nowplaying": {
    "exec": "custom-media-info",
    "hide-empty-text": true
  },
  "custom/nowplaying-icon": {
    "exec": "custom-media-info-icon",
    "interval": 2,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
    "tooltip-format": "Left: Play/Pause\nRight: Next\nMiddle: Previous"
  },
  "custom/weather": {
    "exec": "curl 'https://wttr.in/?format=1'",
    "interval": 3600,
    "hide-empty-text": true
  },
  "custom/network": {
    "exec": "custom-get-ip",
    "interval": 3600,
    "on-click": "custom-get-ip -next",
    "on-scroll-up": "custom-get-ip -prev",
    "on-scroll-down": "custom-get-ip -next"
  },
  "pulseaudio": {
    "format": "󰕾 {volume}%",
    "format-muted": " M",
    "scroll-step": 2,
    "on-click": "pavucontrol"
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "scroll-step": 1
  },
  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ],
    "interval": 20
  },
  "clock": {
    "format": "{:%m/%d %H:%M:%S}",
    "interval": 1,
    "tooltip": false
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "󰂲",
    "format-off": "󰂲",
    "format-on": "󰂯",
    "format-connected": "󰂱",
    "interval": 30,
    "format-no-controller": "󰂲 ",
    "on-click": "blueman-manager"
  },
  "group/hardware": {
    "orientation": "inherit",
    "modules": [
      "hyprland/language",
      "bluetooth",
      "pulseaudio",
      "backlight",
      "battery",
      "clock"
    ]
  },
  "group/nowplaying": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/nowplaying-icon",
      "custom/nowplaying"
    ]
  }
}