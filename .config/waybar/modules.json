{
  "layer": "top",
  "position": "top",
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [
      "Alacritty",
      "kitty"
    ],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },
  "custom/empty": {
    "format": ""
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "custom/nowplaying": {
    "exec": "custom-media-info",
    "hide-empty-text": true
  },
  "custom/nowplaying-icon": {
    "disable-scroll": true,
    "on-scroll-up": "",
    "on-scroll-down": "",
    "exec": "custom-media-info-icon",
    "interval": 2,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
    "tooltip-format": "Left: Play/Pause\nRight: Next\nMiddle: Previous"
  },
  "custom/weather": {
    "exec": "curl 'https://wttr.in/?format=1'",
    "interval": 3600,
    "hide-empty-text": true
  },
  "custom/network": {
    "exec": "custom-get-ip",
    "interval": 3600,
    "on-click": "custom-get-ip -next",
    "on-scroll-up": "custom-get-ip -prev",
    "on-scroll-down": "custom-get-ip -next"
  },
  "pulseaudio": {
    "format": "󰕾 {volume}%",
    "format-muted": " M",
    "scroll-step": 2,
    "on-click": "pavucontrol"
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "scroll-step": 1
  },
  "battery": {
    "disable-scroll": true,
    "on-scroll-up": "",
    "on-scroll-down": "",
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ],
    "interval": 20
  },
  "clock": {
    "format": "{:%m/%d %H:%M:%S}",
    "interval": 1,
    "tooltip": false
  },
  "bluetooth": {
    "disable-scroll": true,
    "on-scroll-up": "",
    "on-scroll-down": "",
    "format": "",
    "format-disabled": "󰂲",
    "format-off": "󰂲",
    "format-on": "󰂯",
    "format-connected": "󰂱",
    "interval": 30,
    "format-no-controller": "󰂲 ",
    "on-click": "blueman-manager"
  },
  "group/nowplaying": {
    "orientation": "inherit",
    "disable-scroll": true,
    "on-scroll-up": "",
    "on-scroll-down": "",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/nowplaying-icon",
      "custom/nowplaying"
    ]
  },
  "network": {
    "format": "",
    "format-wifi": "󰖩 {signalStrength}%",
    "format-ethernet": "󰈀",
    "format-disconnected": "󱛅",
    "tooltip-format": "{ifname} {ipaddr} via {gwaddr} 󰈀",
    "tooltip-format-wifi": "{essid} {ipaddr} ({signalStrength}%) 󰖩",
    "tooltip-format-ethernet": "{ifname} {ipaddr} via {gwaddr} 󰈀",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50
  }
}